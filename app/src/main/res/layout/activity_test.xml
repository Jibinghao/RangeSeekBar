<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/rsb_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:rsb_gravity="bottom"
        app:rsb_indicator_height="40dp"
        app:rsb_indicator_line_color="#03A9F4"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_indicator_text_color="#CDDC39"
        app:rsb_indicator_text_size="12dp"
        app:rsb_mode="single"
        app:rsb_progress_color="@color/colorRed"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_step_auto_bonding="true"
        app:rsb_step_color="#00000000"
        app:rsb_step_height="1dp"
        app:rsb_step_width="1dp"
        app:rsb_thumb_drawable="@mipmap/ic_seekbar_thumb"
        app:rsb_tick_mark_layout_gravity="bottom"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_text_color="@color/colorRed"
        app:rsb_tick_mark_text_margin="15dp" />
</LinearLayout>